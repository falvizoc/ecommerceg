# =============================================================================
# eCommerce-G Environment Variables
# =============================================================================
# Copy this file to .env.local for development
# Never commit .env.local to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3001
PORT=3001

# -----------------------------------------------------------------------------
# Database (PostgreSQL) - Docker Compose defaults
# -----------------------------------------------------------------------------
DATABASE_URL="postgresql://ecommerceg:ecommerceg_dev_2024@localhost:5433/ecommerceg"
POSTGRES_USER=ecommerceg
POSTGRES_PASSWORD=ecommerceg_dev_2024
POSTGRES_DB=ecommerceg

# -----------------------------------------------------------------------------
# Authentication (NextAuth.js)
# -----------------------------------------------------------------------------
NEXTAUTH_SECRET="your-secret-key-here-change-in-production"
NEXTAUTH_URL=http://localhost:3001

# -----------------------------------------------------------------------------
# SYSCOM API
# -----------------------------------------------------------------------------
SYSCOM_CLIENT_ID=
SYSCOM_CLIENT_SECRET=
SYSCOM_API_URL=https://developers.syscom.mx/api/v1

# -----------------------------------------------------------------------------
# Redis Cache
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6380

# -----------------------------------------------------------------------------
# Payment Gateways
# -----------------------------------------------------------------------------

# MercadoPago
MERCADOPAGO_PUBLIC_KEY=
MERCADOPAGO_ACCESS_TOKEN=

# Openpay
OPENPAY_ID=
OPENPAY_PUBLIC_KEY=
OPENPAY_SECRET_KEY=
OPENPAY_SANDBOX=true

# PayPal
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
PAYPAL_MODE=sandbox

# -----------------------------------------------------------------------------
# CFDI / Facturacion (Facturapi)
# -----------------------------------------------------------------------------
FACTURAPI_KEY=
FACTURAPI_MODE=sandbox

# -----------------------------------------------------------------------------
# AWS Services
# -----------------------------------------------------------------------------
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=ecommerce-g-assets

# -----------------------------------------------------------------------------
# Email (Resend)
# -----------------------------------------------------------------------------
RESEND_API_KEY=
EMAIL_FROM=noreply@example.com

# -----------------------------------------------------------------------------
# Search (Meilisearch) - Docker Compose defaults
# -----------------------------------------------------------------------------
MEILISEARCH_HOST=http://localhost:7700
MEILISEARCH_MASTER_KEY=meilisearch_dev_key_2024

# -----------------------------------------------------------------------------
# Analytics (PostHog)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# -----------------------------------------------------------------------------
# Error Tracking (Sentry - Optional)
# -----------------------------------------------------------------------------
SENTRY_DSN=
SENTRY_AUTH_TOKEN=
